{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign in</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.signin') }}" method="post">
                        <div class="form-group{{ validationErrors.email ? ' has-error' : '' }}">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" placeholder="you@tekworks.ca" class="form-control" value="{{ old.email }}">
                            {% if validationErrors.email %}
                                <span class="help-block">{{ validationErrors.email | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Sign in</button>

                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
