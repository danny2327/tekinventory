
{% extends 'templates/app.twig' %}
{% block title %}TekInventory{% endblock %}
 {% block javascript %}            

    <script type="text/javascript">

        $(document).ready(function() {
             //set focus
            $("#collectionName").focus();

       });
    </script>
{% endblock %}
{% block content %}
<div class="row">
        <div class="col-md-8 ">
            <div class="panel panel-default">
                <div class="panel-heading">New Collection</div>
                <div class="panel-body">
                        
                	<form id="padded" class = "form-inline" action="{{ path_for('collections.add.post') }}" method="post" autocomplete="off">
                        <div class="form-group{{ errors.collectionName ? ' has-error' : '' }}" >
                            <label for="collectionName">Name</label>
                             <input type="text" maxlength=25 id="collectionName" name="collectionName" class="form-control">
                             {% if errors.collectionName %}
                                <span class="help-block">{{ errors.collectionName | first }}</span>
                            {% endif %}                            
                        </div>
                        
                        <div class="form-group" >
                            <label for="protected">Protected</label>
                             <input type="checkbox" id="protected" name="protected" value="true" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-success ">Create</button>                        
                       {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>



{% endblock %}